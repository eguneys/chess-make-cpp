{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Launch (CMake Tools)",
            "type": "cppdbg", // Use "cppdbg" for Windows, or "lldb" for macOS/Linux with LLDB
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${command:cmake.launchTargetDirectory}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb", // Use "gdb" for Linux/MinGW, "lldb" for macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}